---
import Voter from './Voter.jsx';
import MessageForm from './MessageForm.jsx';

const { id, href, title, body, vote, date } = Astro.props;
---
	<div id={id} class="link-card">
		<a href={href || "#"}>
			<p>
				{body}
			</p>
			<span class="date-container">{new Date(date).toLocaleString()}</span>
		</a>
		<div class="vote-container">
			<Voter vote={vote} messageId={id} client:visible />
		</div>
	</div>
<style>
	.link-card,
	.message-card {
		display: flex;
		padding: 0.15rem;
		background-color: white;
		background-image: var(--accent-gradient);
		background-size: 400%;
		border-radius: 0.5rem;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.message-card {
		margin-top: 0.5rem;
	}

	.date-container{
		margin-top: auto;
		align-self: flex-end;
		font-size: 0.7rem;
		opacity: 0.8;
	}

	.link-card > a {
		width: 100%;
		display: flex;
		flex-direction: column;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-top-left-radius: 0.35rem;
		border-bottom-left-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 2rem;
		font-weight: 200;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
		width: 100%;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
	}
	.link-card:is(:hover, :focus-within){
		color: rgb(var(--accent));
	}

	.vote-container {
		background-color: white;
		margin-left: auto;
		text-decoration: none;
		line-height: 1.4;
		padding: 0.5rem;
		border-top-right-radius: 0.35rem;
		border-bottom-right-radius: 0.35rem;
		color: #111;
		background-color: white;
		opacity: 0.8;
	}
